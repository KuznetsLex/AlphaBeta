<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon_b_a"
    tools:context=".E">


    <ImageView
        android:id="@+id/letterai"
        android:layout_width="300dp"
        android:layout_height="667dp"

        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.371" />

    <ImageView
        android:id="@+id/tip"
        android:layout_width="111dp"
        android:layout_height="114dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="224dp"
        android:src="@drawable/volume_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:id="@+id/arrow2"
        android:layout_width="107dp"
        android:layout_height="114dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/abc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="225dp"
        android:layout_height="247dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/mouth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnClassify"
        app:layout_constraintVertical_bias="0.977" />

    <com.example.alphabeta.CustomDrawingSurface
        android:id="@+id/customDrawingSurface"
        android:layout_width="306dp"
        android:layout_height="664dp"
        android:layout_marginTop="196dp"

        android:windowBackground="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtOutput"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginTop="196dp"
        android:layout_marginEnd="64dp"
        android:text=""
        android:textSize="1px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>


    <ImageView
        android:id="@+id/btnClassify"
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/proverkaclean"
        android:text="Проверить"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <Switch
        android:id="@+id/btnChange"
        android:layout_width="151dp"
        android:layout_height="82dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/onv1"
        android:checked="true"
        android:thumb="@drawable/space"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></Switch>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="164dp"
        android:layout_height="264dp"
        android:layout_marginStart="408dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/uncommon_forward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="164dp"
        android:layout_height="264dp"
        android:layout_marginEnd="392dp"
        android:src="@drawable/uncommon_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
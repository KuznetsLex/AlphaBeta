<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon_b_a"
    tools:context=".A">


    <ImageView android:id="@+id/letterai"
        android:layout_width="237dp"
        android:layout_height="352dp"
        android:src="@drawable/bukva_b"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49" />

    <ImageView android:id="@+id/tip"
        android:layout_width="93dp"
        android:layout_height="104dp"
        android:src="@drawable/volume_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062"></ImageView>

    <ImageView android:id="@+id/arrow2"
        android:layout_width="85dp"
        android:layout_height="90dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/abc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tip"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <ImageView android:id="@+id/imageView3"
        android:layout_width="206dp"
        android:layout_height="86dp"
        android:src="@drawable/mouth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.898" />

    <ImageView android:id="@+id/back"
        android:layout_width="89dp"
        android:layout_height="178dp"

        android:src="@drawable/uncommon_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962" />

    <ImageView android:id="@+id/forward"
        android:layout_width="95dp"
        android:layout_height="183dp"
        android:src="@drawable/uncommon_forward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946" />

    <com.example.alphabeta.CustomDrawingSurface android:id="@+id/customDrawingSurface"
        android:layout_width="306dp"
        android:layout_height="500dp"

        android:windowBackground="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView android:id="@+id/txtOutput"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginTop="196dp"
        android:layout_marginEnd="64dp"
        android:text=""
        android:textSize="1px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>


    <ImageView android:id="@+id/btnClassify"
        android:layout_width="88dp"
        android:layout_height="90dp"
        android:background="@drawable/proverkaclean"
        android:text="Проверить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231"></ImageView>

    <Switch android:id="@+id/btnChange"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/onv1"
        android:checked="true"
        android:thumb="@drawable/space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toEndOf="@+id/tip"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067"></Switch>

    <ImageView android:id="@+id/imageView2"
        android:layout_width="164dp"
        android:layout_height="264dp"
        android:layout_marginStart="408dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/uncommon_forward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView android:id="@+id/imageView4"
        android:layout_width="164dp"
        android:layout_height="264dp"
        android:layout_marginEnd="392dp"
        android:src="@drawable/uncommon_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>